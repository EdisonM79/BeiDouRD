<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <FrameLayout
        android:id="@+id/item_wechat_main_layout_headimg"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_margin_left_10dp">


        <ImageView
            android:id="@+id/item_wechat_main_iv_headimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_d" />

        <TextView
            android:id="@+id/item_wechat_main_iv_unread"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/badge"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/content_text_small" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_img"
        android:layout_toRightOf="@+id/item_wechat_main_layout_headimg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wechat_main_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/blank_username"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/content_text_16sp" />

        <TextView
            android:id="@+id/item_wechat_main_tv_lastmsg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/default_message"
            android:textSize="@dimen/content_text_14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wechat_main_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin"
            android:layout_weight="1"
            android:text="@string/default_time"
            android:textSize="@dimen/content_text_14sp" />

        <ImageView
            android:id="@+id/item_wechat_main_iv_mute"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/mute" />

    </LinearLayout>

</RelativeLayout>